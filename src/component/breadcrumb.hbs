<div class="row ps-5 mb-4">
    <div class="col-12">
        <ol class="breadcrumb">
            {{#each breadcrumb}}
            {{#if @last}}
            <li class="breadcrumb-item active">
                <a href="{{url}}">{{name}}</a>
            </li>
            {{else}}
            <li class="breadcrumb-item">
                <a href="{{url}}">{{name}}</a>
            </li>
            {{/if}}
            {{/each}}
        </ol>
    </div>
</div>
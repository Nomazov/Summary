<div class="col-6">
    <div class="card mb-3">
        <img src="{{img}}" alt="{{name}}">
        <div class="card-body pt-2 pb-0">
            <div class="mb-3">
                {{#if isHot}}
                <span class="badge text-bg-warning rounded-pill">Hot</span>
                {{/if}}
                {{#if isNew}}
                <span class="badge text-bg-primary rounded-pill">Нове</span>
                {{/if}}
            </div>
            {{#if isFast}}
            <div>
                <span class="badge text-bg-success">Швидка доставка</span>
            </div>
            {{/if}}
            {{#if isFree}}
            <div>
                <span class="badge text-bg-secondary">Безкоштовна доставка</span>
            </div>
            {{/if}}

            <p class="mt-3"><strong>{{name}}</strong></p>
            <p>
                {{#with review}}
                {{amount}} {{text}}
                {{/with}}
            </p>
            <p><strong>{{price}}</strong></p>
            <p>{{delivery}}</p>

            {{#each buttons}}
            {{#if isPrimary}}
            <div class="mb-2">
                <a href="{{link}}">
                    <button class="btn btn-primary btn-sm">
                        {{text}}
                    </button>
                </a>
            </div>
            {{/if}}

            {{#if isSecondary}}
            <div class="mb-3">
                <a href="{{link}}">
                    <button class="btn btn-secondary btn-sm">
                        {{text}}
                    </button>
                </a>
            </div>
            {{/if}}
            {{/each}}
            <ul>
                {{#each characteristics}}
                <li>
                    {{title}}: {{value}}
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="row">
    {{#each footer}}
    <div class="nav flex-column col-2">
        {{#each this}}
        {{#if @last}}
        <div class="nav-item disabled">
            <a href="{{link}}" class="nav-link">{{text}}</a>
        </div>
        {{else}}
        <div class="nav-item">
            <a href="{{link}}" class="nav-link">{{text}}</a>
        </div>
        {{/if}}
        {{/each}}
    </div>
    {{/each}}
</div>
<div>
    <main>
        <section>
            {{> title data=page.title big=true}}

            <hr class="my-5">

            <div class="mb-2"><em>Name:</em> {{name}}</div>
            <div class="mb-2"><em>Birthdate:</em> {{birthdate}}</div>
            <div class="mb-2"><em>Birthplace:</em> {{birthplace}}</div>
            <div class="mb-2"><em>Deathdate:</em> {{deathdate}}</div>
            <div class="mb-2"><em>Deathplace:</em> {{deathplace}}</div>
            <div class="mb-2"><em>Nationality:</em> {{nationality}}</div>
            <div class="mb-5"><em>Occupation:</em> {{occupation}}</div>

            <div class="mb-2">
                <em>known_for:</em>
                <ul>
                    {{#each known_for}}
                    <li class="mb-2">{{this}}</li>
                    {{/each}}
                </ul>
            </div>

            <div class="mb-2">
                <em class="mb-2">Education:</em>
                <ul>
                    {{#each education}}
                    <li class="mb-2">
                        <div><em>Degree:</em> {{degree}}</div>
                        <div><em>Field:</em> {{field}}</div>
                        <div><em>Institution:</em> {{institution}}</div>
                        <div><em>Year:</em> {{year}}</div>
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div class="mb-2">
                <em class="mb-2">Notable Publications:</em>
                <ul>
                    {{#each notable_publications}}
                    <li class="mb-2">
                        <div><em>Title:</em> {{title}}</div>
                        <div><em>Year:</em> {{year}}</div>
                        <div><em>Publisher:</em> {{publisher}}</div>
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div class="mb-2">
                <em class="mb-2">Partners:</em>
                <ul>
                    {{#each partners}}
                    <li class="mb-2">
                        <div><em>Name:</em> {{name}}</div>
                        <div><em>Relationship:</em> {{relationship}}</div>
                        <div><em>Years:</em> {{years}}</div>
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div class="mb-2">
                <em class="mb-2">Awards:</em>
                <ul>
                    {{#each awards}}
                    <li class="mb-2">
                        <div><em>Title:</em> {{title}}</div>
                        <div><em>Year:</em> {{year}}</div>
                        <div><em>Description:</em> {{description}}</div>
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div class="mb-2">
                <em class="mb-2">Influences:</em>
                <ul>
                    {{#each influences}}
                    <li class="mb-2">{{this}}</li>
                    {{/each}}
                </ul>
            </div>

            <div class="mb-2">
                <em class="mb-2">Influenced:</em>
                <ul>
                    {{#each influenced}}
                    <li class="mb-2">{{this}}</li>
                    {{/each}}
                </ul>
            </div>

            <div class="mb-2">
                <em class="mb-2">Quotes:</em>
                <ul>
                    {{#each quotes}}
                    <li class="mb-2">{{this}}</li>
                    {{/each}}
                </ul>
            </div>

            <div class="mb-2">
                <em class="mb-2">Major Discoveries:</em>
                <ul>
                    {{#each major_discoveries}}
                    <li class="mb-2">
                        <div><em>Title:</em> {{title}}</div>
                        <div><em>Year:</em> {{year}}</div>
                        <div><em>Description:</em> {{description}}</div>
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div class="mb-2">
                {{#with contributions}}
                <em class="mb-2">Contributions:</em>
                <div class="mb-2"><em>Title:</em> {{title}}</div>
                <div class="mb-2"><em>Description:</em> {{description}}</div>
                <div class="mb-2"><em>Year:</em> {{year}}</div>
                <div class="mb-2"><em>Field:</em> {{field}}</div>
                {{/with}}
            </div>
        </section>
        <hr class="my-5">

    </main>
</div>
<main>

    {{> breadcrumb}}

    <section>
        <div class="row">
            {{#with productData}}
            <div class="col-6 p-0 me-4">
                <div class="mb-4">
                    <img src="{{img}}" alt="image">
                </div>
                <div class="card">
                    {{#with info}}
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p>{{about}}</p>
                        <p><strong>{{price}}</strong></p>
                        <div>
                            {{#each category}}
                            {{#if isHot}}
                            <span class="badge text-bg-warning rounded-pill">{{name}}</span>
                            {{/if}}
                            {{#if isNew}}
                            <span class="badge text-bg-primary rounded-pill">{{name}}</span>
                            {{/if}}
                            {{#if isBonus}}
                            <span class="badge text-bg-info rounded-pill">{{name}}</span>
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>

            <div class="col-5 ms-5 p-0">
                <table class="table">
                    {{#with item}}
                    <thead>
                        <tr>
                            {{#each head}}
                            <th>
                                {{this}}
                            </th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each body}}
                        <tr>
                            {{#each this}}
                            <td>{{this}}</td>
                            {{/each}}
                        </tr>
                        {{/each}}
                    </tbody>
                    {{/with}}
                </table>

                <div class="card mb-4">
                    {{#with param}}
                    <div class="card-header">
                        {{title}}
                    </div>
                    <ul class="list-group list-group-flush">
                        {{#each list}}
                        <li class="list-group-item">{{this}}</li>
                        {{/each}}
                    </ul>
                    {{/with}}
                </div>

                {{#with alert}}
                {{#if isError}}
                <div class="alert alert-danger ">
                    {{text}}
                </div>
                {{/if}}
                {{/with}}
            </div>

            <div class="card mt-4">
                <div class="card-body p-2">
                    {{#each actionList}}
                    {{#if isWarning}}
                    <button class="btn btn-warning me-3">{{name}}</button>
                    {{/if}}
                    {{#if isError}}
                    <button class="btn btn-outline-danger me-3">{{name}}</button>
                    {{/if}}
                    {{#if isSuccess}}
                    <button class="btn btn-success me-3">{{name}}</button>
                    {{/if}}
                    {{#if isGood}}
                    <button class="btn btn-outline-success me-3">{{name}}</button>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}
        </div>
    </section>

    <hr class="my-5">

    <section>
        {{#with goodsOtherBlock}}
        <div class="row">
            {{> shopcard}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section>
        {{> shopaction}}
    </section>

    <hr class="mt-5 mb-3">

</main>
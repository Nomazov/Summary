<main>
    {{#with main}}
    <section>
        {{> title data='My skills' big=true}}

        <ul>
            {{#each skills}}
            <li class="mb-2">
                {{name}}
                {{#if point includeZero=true}} - {{point}}{{/if}}
                {{#if isTop}} (Is Top){{/if}}
                {{#unless point includeZero=true}} (Не вивчаємо){{/unless}}
                {{#unless point}}
                {{#if point includeZero=true}} (Зараз вивчаємо){{/if}}
                {{/unless}}
            </li>
            {{/each}}
        </ul>
    </section>

    <hr class="my-5">

    <section>
        {{> title data='My hobbies'}}

        <ul>
            {{#each hobbies}}
            <li class="mb-2">
                {{name}}
                {{#if isMain}}
                (Favorite)
                {{/if}}
            </li>
            {{/each}}
        </ul>
    </section>
    {{/with}}
</main>
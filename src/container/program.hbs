<div>
    <main>
        <br>
        <hr>
        <section>
            {{#with program}}
            {{> title data="Excursion Program" big=true}}
            <div>
                {{#with excursion}}
                <div class="mb-2"><em>Name:</em> {{name}}</div>
                <div class="mb-2">
                    <em>Location:</em>
                    {{#with location}}
                    <div><em>City:</em> {{city}}</div>
                    <div><em>Country:</em> {{country}}</div>
                    {{/with}}
                </div>

                <div class="mb-2"><em>Date:</em> {{date}}</div>
                <div class="mb-2"><em>Program:</em>
                    <ul>
                        {{#each program}}
                        <li class="mb-4">
                            <div class="mb-2"><em>Name:</em> {{name}}</div>
                            <div class="mb-2"><em>Type:</em> {{type}}</div>
                            <div class="mb-2"><em>Duration:</em> {{duration}}</div>

                            <div>
                                {{#with details}}
                                <em class="mb-2">Details:</em>
                                <div>
                                    {{#if museum}}
                                    {{#with museum}}
                                    <em>Museum:</em>
                                    <div><em>Name:</em> {{name}}</div>

                                    <div class="mb-2">
                                        {{#with location}}
                                        <div><em>Location:</em> {{address}}</div>
                                        <div><em>City:</em> {{city}}</div>
                                        <div><em>Country:</em> {{country}}</div>
                                        {{/with}}
                                    </div>

                                    <div>
                                        <em class="mb-2">Exhibits:</em>
                                        <div>
                                            <ul>
                                                {{#each exhibits}}
                                                <li class="mb-2">
                                                    <div><em>Name:</em> {{name}}</div>
                                                    <div>
                                                        {{#if artist includeZero=null }}
                                                        <div><em>Artist:</em>
                                                            {{artist}}</div>
                                                        {{else}}
                                                        <div><em>Artist:</em>
                                                            No Artist</div>
                                                        {{/if}}

                                                    </div>
                                                    <div><em class="mb-2">Description:</em> {{description}}</div>
                                                    <div class="mb-2">
                                                        {{#if audio_guide includeZero=true}}
                                                        <div><em>Audi guide:</em> With audio guide</div>
                                                        {{else}}
                                                        <div><em>Audi guide:</em> No audio guide</div>
                                                        {{/if}}
                                                    </div>
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </div>
                                        {{/with}}
                                    </div>
                                    {{/if}}
                                    {{#if venue}}

                                    <div class="mb-2">
                                        {{#with venue}}
                                        <div class="mb-2"><em>Venue:</em></div>
                                        <div class="mb-2"><em>Name:</em>{{name}}</div>
                                        <div class="mb-2">
                                            {{#with location}}
                                            <div><em>Location:</em> {{address}}</div>
                                            <div><em>City:</em> {{city}}</div>
                                            <div><em>Country:</em> {{country}}
                                            </div>
                                            {{/with}}
                                        </div>
                                        {{/with}}
                                    </div>

                                    <div class="mb-2">
                                        <em class="mb-2">Performers:</em>
                                        <ul>
                                            {{#each performers}}
                                            <li class="mb-2">
                                                <div><em>Name:</em> {{name}}</div>
                                                <div><em>Type:</em> {{type}}</div>
                                            </li>
                                            {{/each}}
                                        </ul>
                                    </div>

                                    {{/if}}

                                    <div class="mb-2">
                                        {{#with guide}}
                                        <em>Guide:</em>
                                        <div><em>Name:</em> {{name}}</div>
                                        <div><em>Language:</em> {{language}}</div>
                                        <div><em>Rating:</em> {{rating}}</div>
                                        {{/with}}
                                    </div>
                                </div>
                                {{/with}}
                            </div>
                        </li>

                        {{/each}}
                    </ul>
                </div>

                {{/with}}
            </div>
            {{/with}}
        </section>
        <hr class="my-5">

    </main>
</div>